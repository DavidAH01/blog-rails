<div class="comment clearfix">
	<div class="comment_content">
		<p class="content_name"><strong><%= comment.name %></strong></p>
		<p class="content_body"><%= comment.body %></p>
		<p class="content_time"><%= time_ago_in_words(comment.created_at) %></p>
	</div>

	<p><%= link_to "Delete", [comment.post, comment], method: :delete, class: "button", data: { confirm: "Are you sure?" } %></p>
</div>